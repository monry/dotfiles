{
  "title": "Customized by @monry",
  "rules": [
    {
      "description": "CapsLock キー空打ちを F13 に割り当て",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f13"
            }
          ]
        }
      ]
    },
    {
      "description": "左右 option キーをかな/英数に割り当て",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_eisuu"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_option"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "japanese_kana"
            }
          ]
        }
      ]
    },
    {
      "description": "fn + g で Gyazo 起動",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": { "mandatory": [ "fn" ] }
          },
          "to": [
            { "shell_command": "open -a 'Gyazo'" }
          ]
        }
      ]
    },
    {
      "description": "fn + shift + g で Gyazo GIF 起動",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": { "mandatory": [ "fn", "shift" ] }
          },
          "to": [
            { "shell_command": "open -a 'Gyazo GIF'" }
          ]
        }
      ]
    }
  ]
}
