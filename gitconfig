[user]
	email = monry84@gmail.com
	name = Tetsuya Mori
[core]
	editor = vim
	precomposeunicode = true
	excludesfile = ~/.gitignore_global
[commit]
	template = ~/.gitmessage
[color]
	diff = auto
	status = auto
	branch = auto
[alias]
	a = add
	s = status
	i = "commit --allow-empty -v"
	c = checkout
	b = branch
	m = "merge --no-ff"
	d = diff
	f = fetch
	pl = "!f() { git lfs install --force --skip-smudge && git pull && git lfs pull && git lfs install --force; }; f"
	ps = !git push -u origin `git rev-parse --abbrev-ref HEAD`
	rp = !git remote prune origin
	rf = !CURRENT_BRANCH=`git rev-parse --abbrev-ref HEAD` && git fetch origin master:master && git checkout master && git remote prune origin && git branch -d $CURRENT_BRANCH
	full-push = !git push --all && git push --tags
	lc = !git lfs checkout
	lf = !git lfs fetch
	lcl = !git lfs clone
	lpl = !git lfs pull
	lps = !git lfs push
	pr = !hub pull-request
	checkout-with-lfs = "!f() { git lfs install --force --skip-smudge && git checkout $1 && git lfs pull && git lfs install --force; }; f"
	pull-with-lfs = "!f() { git lfs install --force --skip-smudge && git pull && git lfs pull && git lfs install --force; }; f"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
